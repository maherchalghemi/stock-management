@model Tahri_Company.Models.AccountViewModel

@{
    Layout = "~/Views/Shared/_Layout - EspaceAdmin.cshtml";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Magasiniers </h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Lancer!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Gestion des magasiniers</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        </br>

                        <div style="margin:0 auto" align=center>
                            <a href="~/Admin/CreateMagasinier" class="btn btn-success">Créer un nouveau magasinier</a>
                        </div>
                        </br>
                        <p class="text-muted font-13 m-b-30">
                            Les boutons ci-dessous vous permette de copier le contenu du tableau, Télécharger un fichier excel correspondant et d'imprimer le tableau :
                        </p>
                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Email</th>
                                    <th>Date de naissance</th>
                                    <th>Numéro de Télephone</th>
                                    <th>Adresse</th>
                                    <th></th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Magasiniers)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TelPerso)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Adresse)</td>
                                        <td>
                                            
                                            <a href="#" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Modifier </a>
                                            <a href="#" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<!-- jQuery -->
<script src="~/Content/Admin/vendors/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="~/Content/Admin/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- FastClick -->
<script src="~/Content/Admin/vendors/fastclick/lib/fastclick.js"></script>
<!-- NProgress -->
<script src="~/Content/Admin/vendors/nprogress/nprogress.js"></script>
<!-- iCheck -->
<script src="~/Content/Admin/vendors/iCheck/icheck.min.js"></script>
<!-- Datatables -->
<script src="~/Content/Admin/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/Content/Admin/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="~/Content/Admin/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/Content/Admin/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
<script src="~/Content/Admin/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
<script src="~/Content/Admin/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
<script src="~/Content/Admin/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
<script src="~/Content/Admin/vendors/jszip/dist/jszip.min.js"></script>
<script src="~/Content/Admin/vendors/pdfmake/build/pdfmake.min.js"></script>
<script src="~/Content/Admin/vendors/pdfmake/build/vfs_fonts.js"></script>
<!-- Custom Theme Scripts -->
<script src="~/Content/Admin/build/js/custom.min.js"></script>
<!-- Datatables -->
<script>
    $(document).ready(function () {
        var handleDataTableButtons = function () {
            if ($("#datatable-buttons").length) {
                $("#datatable-buttons").DataTable({
                    dom: "Bfrtip",
                    buttons: [
                      {
                          extend: "copy",
                          className: "btn-sm"
                      },
                      {
                          extend: "excel",
                          className: "btn-sm"
                      },
                      {
                          extend: "print",
                          className: "btn-sm"
                      },
                    ],
                    responsive: true
                });
            }
        };

        TableManageButtons = function () {
            "use strict";
            return {
                init: function () {
                    handleDataTableButtons();
                }
            };
        }();

        TableManageButtons.init();
    });
</script>
<!-- /Datatables -->
